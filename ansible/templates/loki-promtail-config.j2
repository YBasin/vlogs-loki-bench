server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /mnt/logs/positions.yaml

clients:
  - url: 'http://localhost:3100/loki/api/v1/push'

scrape_configs:
  - job_name: benchlogs
    static_configs:
      - targets:
          - localhost
        labels:
          job: benchlogs
          __path__: /var/logs/bench-logs/*.log